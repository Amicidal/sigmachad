{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "src",
    "types": [],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "**/*.spec.js",
    "src/**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "src/**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.tsx",
    "src/tsconfig.spec.json"
  ]
}
