{
  "name": "shared-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared-types/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared-types",
        "main": "packages/shared-types/src/index.ts",
        "tsConfig": "packages/shared-types/tsconfig.lib.json",
        "assets": ["packages/shared-types/*.md"],
        "updateBuildableProjectDeps": [
          {
            "project": "**",
            "updateBuildableProjectDepsInPackageJson": true
          }
        ],
        "verifyTypeScript": true
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/shared-types/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/shared-types/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/shared-types/**/*.ts",
          "packages/shared-types/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vitest:vitest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "reportsDirectory": "coverage/packages/shared-types"
      }
    }
  },
  "tags": []
}