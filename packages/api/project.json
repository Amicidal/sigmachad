{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api",
  "sourceRoot": "packages/api/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [],
      "outputs": [],
      "options": {
        "command": "tsc -p packages/api/tsconfig.json --noEmit"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/api/src/**/*.ts"],
        "maxWarnings": -1
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "vitest.config.ts",
        "reportsDirectory": "../../coverage/packages/api",
        "passWithNoTests": true
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p packages/api/tsconfig.json --noEmit --watch"
      }
    }
  },
  "implicitDependencies": ["core", "database", "knowledge"]
}
