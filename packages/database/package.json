{
  "name": "@memento/database",
  "version": "0.1.0",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./*": {
      "types": "./*.d.ts",
      "import": "./*.js",
      "default": "./*.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@memento/core": "workspace:*",
    "@memento/shared-types": "workspace:*",
    "@qdrant/js-client-rest": "^1.9.0",
    "neo4j-driver": "^5.28.2",
    "neogma": "^1.14.1",
    "pg": "^8.13.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
