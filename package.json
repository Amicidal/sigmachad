{
  "name": "memento",
  "version": "0.1.0",
  "description": "AI coding assistant with comprehensive codebase awareness through knowledge graphs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:docker-up": "docker compose up -d falkordb qdrant postgres redis",
    "dev:server": "PORT=0 NODE_ENV=development tsx watch src/index.ts",
    "start:local": "NODE_ENV=development node dist/index.js",
    "postbuild": "node scripts/check-dist-imports.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:setup": "tsx tests/setup.ts setup",
    "test:cleanup": "tsx tests/setup.ts cleanup",
    "test:integration": "RUN_INTEGRATION=1 NODE_ENV=test vitest run tests/integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t memento-local .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test-up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test-down": "docker-compose -f docker-compose.test.yml down -v",
    "sync": "tsx scripts/sync-knowledge-graph.ts",
    "health": "tsx scripts/health-check.ts"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "knowledge-graph",
    "typescript",
    "mcp",
    "claude"
  ],
  "author": "Memento Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/websocket": "^11.2.0",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@qdrant/js-client-rest": "^1.9.0",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/archiver": "^6.0.3",
    "@typescript/vfs": "^1.6.0",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.5.0",
    "marked": "^16.2.1",
    "openai": "^5.16.0",
    "pg": "^8.13.0",
    "redis": "^4.7.0",
    "superjson": "^2.2.1",
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-typescript": "^0.23.2",
    "trpc-openapi": "^1.2.0",
    "ts-morph": "^26.0.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/chokidar": "^2.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-plugin-security": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-typescript"
    ],
    "overrides": {
      "tree-sitter": "0.25.0",
      "tree-sitter-javascript": "0.23.1",
      "tree-sitter-typescript": "0.23.2"
    }
  }
}
