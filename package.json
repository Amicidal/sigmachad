{
  "name": "memento",
  "version": "0.1.0",
  "description": "AI coding assistant with comprehensive codebase awareness through knowledge graphs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "node scripts/run-nx.cjs run-many -t build",
    "build:affected": "node scripts/run-nx.cjs affected -t build",
    "build:packages": "node scripts/run-nx.cjs run-many -t build --exclude=memento",
    "build:main": "node scripts/run-nx.cjs build memento",
    "build:web": "node scripts/run-nx.cjs build web",
    "build:mcp": "node scripts/run-nx.cjs build mcp-server",
    "start": "node dist/apps/main/index.js",
    "start:web": "node scripts/run-nx.cjs serve web",
    "start:mcp": "node scripts/run-nx.cjs serve mcp-server",
    "dev": "node scripts/run-nx.cjs run-many -t dev --parallel",
    "dev:web": "node scripts/run-nx.cjs serve web",
    "dev:mcp": "node scripts/run-nx.cjs serve mcp-server",
    "dev:all": "node scripts/run-nx.cjs run-many --target=serve --projects=web,mcp-server --parallel",
    "dev:docker-up": "node scripts/run-nx.cjs run memento:docker:up",
    "dev:server": "PORT=0 NODE_ENV=development tsx watch apps/main/src/index.ts",
    "start:local": "NODE_ENV=development node dist/apps/main/index.js",
    "postbuild": "node scripts/check-dist-imports.mjs",
    "test": "node scripts/run-nx.cjs run-many -t test",
    "test:affected": "node scripts/run-nx.cjs affected -t test",
    "test:packages": "node scripts/run-nx.cjs run-many -t test --exclude=memento",
    "test:main": "node scripts/run-nx.cjs test memento",
    "test:watch": "node scripts/run-nx.cjs test memento --watch",
    "test:coverage": "node scripts/run-nx.cjs run-many -t test --coverage",
    "test:setup": "tsx tests/setup.ts setup",
    "test:cleanup": "tsx tests/setup.ts cleanup",
    "test:integration": "node scripts/run-nx.cjs run memento:test:integration",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:watch": "vitest --config tests/e2e/vitest.config.ts",
    "test:e2e:auth": "vitest run --config tests/e2e/vitest.config.ts tests/e2e/auth",
    "test:e2e:search": "vitest run --config tests/e2e/vitest.config.ts tests/e2e/search",
    "test:e2e:realtime": "vitest run --config tests/e2e/vitest.config.ts tests/e2e/realtime",
    "test:e2e:graph": "vitest run --config tests/e2e/vitest.config.ts tests/e2e/knowledge-graph",
    "test:e2e:gateway": "vitest run --config tests/e2e/vitest.config.ts tests/e2e/api-gateway",
    "test:e2e:integration": "vitest run --config tests/e2e/vitest.config.ts tests/e2e/integration-suite.test.ts",
    "test:e2e:services:up": "docker compose -f tests/e2e/docker-compose.test.yml up -d",
    "test:e2e:services:down": "docker compose -f tests/e2e/docker-compose.test.yml down",
    "test:e2e:services:logs": "docker compose -f tests/e2e/docker-compose.test.yml logs -f",
    "test:e2e:full": "pnpm test:e2e:services:up && pnpm test:e2e && pnpm test:e2e:services:down",
    "lint": "node scripts/run-nx.cjs run-many -t lint",
    "lint:affected": "node scripts/run-nx.cjs affected -t lint",
    "lint:packages": "node scripts/run-nx.cjs run-many -t lint --exclude=memento",
    "lint:main": "node scripts/run-nx.cjs lint memento",
    "lint:fix": "node scripts/run-nx.cjs run-many -t lint --fix",
    "lint:depth": "tsx scripts/validate-depth.ts",
    "lint:depth:verbose": "tsx scripts/validate-depth.ts --verbose",
    "lint:depth:fix": "tsx scripts/validate-depth.ts --fix",
    "lint:tests:lax-codes": "ast-grep run -p 'expect([$A, $B]).toContain($RESP.statusCode)' -l ts tests && ast-grep run -p 'expect([$A, $B, $C]).toContain($RESP.statusCode)' -l ts tests && ast-grep run -p 'expect([$A, $B, $C, $D]).toContain($RESP.statusCode)' -l ts tests",
    "lint:tests:not-to-throw": "ast-grep run -p 'await expect($CALL).resolves.not.toThrow()' -l ts tests",
    "lint:tests:no-skip-only": "ast-grep run --config .ast-grep.yaml --rule-id no-focused-tests --rule-id no-skipped-tests tests",
    "lint:tests:no-empty": "ast-grep run --config .ast-grep.yaml --rule-id test-must-have-expect tests",
    "lint:tests:config": "ast-grep scan -c .ast-grep.yaml --report-style medium tests",
    "lint:tests": "pnpm lint:tests:lax-codes && pnpm lint:tests:not-to-throw && pnpm lint:tests:no-skip-only && pnpm lint:tests:no-empty && pnpm lint:tests:config",
    "docker:build": "docker build -t memento-local .",
    "docker:up": "node scripts/run-nx.cjs run memento:docker:up",
    "docker:down": "node scripts/run-nx.cjs run memento:docker:down",
    "docker:test-up": "node scripts/run-nx.cjs run memento:docker:test-up",
    "docker:test-down": "node scripts/run-nx.cjs run memento:docker:test-down",
    "kg:clear": "node scripts/clear-knowledge-graph.js",
    "db:clear:pg": "node scripts/clear-postgres.js",
    "db:clear:qdrant": "node scripts/clear-qdrant.js",
    "db:clear:all": "pnpm kg:clear && pnpm db:clear:qdrant && pnpm db:clear:pg",
    "sync": "node scripts/run-nx.cjs run memento:sync",
    "migrate:imports": "tsx scripts/migrate-imports.ts",
    "health": "node scripts/run-nx.cjs run memento:health",
    "history:backfill": "tsx scripts/backfill-temporal-history.ts",
    "structural:backfill": "tsx scripts/backfill-structural-metadata.ts",
    "assets:webgl": "tsx scripts/fetch-webgl-assets.ts",
    "smoke": "tsx scripts/smoke-test.ts",
    "web:dev": "pnpm --dir web/graph-viewer dev",
    "web:build": "pnpm --dir web/graph-viewer build",
    "prepare": "husky",
    "nx": "node scripts/run-nx.cjs",
    "graph": "node scripts/run-nx.cjs graph",
    "affected:graph": "node scripts/run-nx.cjs affected:graph",
    "docs:generate": "bash scripts/generate-code-summaries.sh",
    "docs:validate": "tsx scripts/validate-blueprints.ts",
    "docs:fix": "tsx scripts/validate-blueprints.ts --fix",
    "docs:coupling": "tsx scripts/validate-doc-coupling.ts",
    "semgrep:check": "semgrep --config=.semgrep/rules/quality-indicators.yml packages/",
    "repomix:package": "npx -y repomix packages/ --output Docs/summaries/full-codebase.md",
    "security:secrets:check:file": "tsx scripts/security-secrets-check.ts"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "knowledge-graph",
    "typescript",
    "mcp",
    "claude"
  ],
  "author": "Memento Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@fastify/websocket": "^11.2.0",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@qdrant/js-client-rest": "^1.9.0",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/archiver": "^6.0.3",
    "@typescript/vfs": "^1.6.0",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.5.0",
    "marked": "^16.2.1",
    "neo4j-driver": "^5.28.2",
    "neogma": "^1.14.1",
    "openai": "^5.16.0",
    "pg": "^8.13.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "redis": "^4.7.0",
    "superjson": "^2.2.1",
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-typescript": "^0.23.2",
    "trpc-openapi": "^1.2.0",
    "ts-morph": "^26.0.0",
    "tslib": "^2.3.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.39.5",
    "@eslint/js": "^9.34.0",
    "@nx/esbuild": "21.5.3",
    "@nx/eslint": "^21.5.3",
    "@nx/js": "^21.5.3",
    "@nx/node": "^21.5.3",
    "@nx/react": "^21.5.3",
    "@nx/vite": "^21.5.3",
    "@nx/web": "^21.5.3",
    "@nx/workspace": "^21.5.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/chokidar": "^2.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.11.10",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.19.2",
    "eslint": "^9.17.0",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "nx": "^21.5.3",
    "prettier": "^2.6.2",
    "repomix": "^0.2.0",
    "semgrep": "^1.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "uuid": "^11.1.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-typescript"
    ],
    "overrides": {
      "tree-sitter": "0.25.0",
      "tree-sitter-javascript": "0.23.1",
      "tree-sitter-typescript": "0.23.2"
    }
  }
}
