{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": false,
  "cache": true,
  "check-coverage": true,
  "per-file": true,
  "report-dir": "coverage",
  "reporter": ["text", "html", "lcov"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "src/index.ts",
    "src/utils/embedding.ts"
  ],
  "branches": 70,
  "lines": 75,
  "functions": 80,
  "statements": 75,
  "watermarks": {
    "branches": [70, 90],
    "lines": [75, 90],
    "functions": [80, 95],
    "statements": [75, 90]
  }
}



