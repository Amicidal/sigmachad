{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "Node16",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "packages/*/src/**/*",
    "apps/*/src/**/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "extends": "./tsconfig.base.json"
}