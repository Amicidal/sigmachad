{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "packages/api/src/types/fastify.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "packages/**/tests/**",
    "packages/core/tests/**",
    "packages/testing/**",
    "packages/backup/**",
    "tests/e2e/**",
    "tests/integration/**",
    "tests/benchmarks/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
