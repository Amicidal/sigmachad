{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/api/*": ["src/api/*"],
      "@/models/*": ["src/models/*"],
      "@/services/*": ["src/services/*"],
      "@/utils/*": ["src/utils/*"],
      "@memento/api": ["packages/api/src"],
      "@memento/api/*": ["packages/api/src/*"],
      "@memento/core": ["packages/core/src"],
      "@memento/core/*": ["packages/core/src/*"],
      "@memento/database": ["packages/database/src"],
      "@memento/database/*": ["packages/database/src/*"],
      "@memento/knowledge": ["packages/knowledge/src"],
      "@memento/knowledge/*": ["packages/knowledge/src/*"],
      "@memento/testing": ["packages/testing/src"],
      "@memento/testing/*": ["packages/testing/src/*"],
      "@memento/shared-types": ["packages/shared-types/src"],
      "@memento/shared-types/*": ["packages/shared-types/src/*"],
      "@shared-types": ["packages/shared-types/src"],
      "@shared-types/*": ["packages/shared-types/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
