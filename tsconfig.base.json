{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/models/*": [
        "src/models/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@memento/agents": [
        "packages/agents/src"
      ],
      "@memento/agents/*": [
        "packages/agents/src/*"
      ],
      "@memento/api": [
        "packages/api/src"
      ],
      "@memento/api/*": [
        "packages/api/src/*"
      ],
      "@memento/backup": [
        "packages/backup/src"
      ],
      "@memento/backup/*": [
        "packages/backup/src/*"
      ],
      "@memento/core": [
        "packages/core/src"
      ],
      "@memento/core/*": [
        "packages/core/src/*"
      ],
      "@memento/database": [
        "packages/database/src"
      ],
      "@memento/database/*": [
        "packages/database/src/*"
      ],
      "@memento/graph": [
        "packages/graph/src"
      ],
      "@memento/graph/*": [
        "packages/graph/src/*"
      ],
      "@memento/jobs": [
        "packages/jobs/src"
      ],
      "@memento/jobs/*": [
        "packages/jobs/src/*"
      ],
      "@memento/knowledge": [
        "packages/knowledge/src"
      ],
      "@memento/knowledge/*": [
        "packages/knowledge/src/*"
      ],
      "@memento/parser": [
        "packages/parser/src"
      ],
      "@memento/parser/*": [
        "packages/parser/src/*"
      ],
      "@memento/shared-types": [
        "packages/shared-types/src"
      ],
      "@memento/shared-types/*": [
        "packages/shared-types/src/*"
      ],
      "@memento/sync": [
        "packages/sync/src"
      ],
      "@memento/sync/*": [
        "packages/sync/src/*"
      ],
      "@memento/testing": [
        "packages/testing/src"
      ],
      "@memento/testing/*": [
        "packages/testing/src/*"
      ],
      "@memento/utils": [
        "packages/utils/src"
      ],
      "@memento/utils/*": [
        "packages/utils/src/*"
      ],
      "@memento/main": [
        "apps/main/src"
      ],
      "@memento/main/*": [
        "apps/main/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
